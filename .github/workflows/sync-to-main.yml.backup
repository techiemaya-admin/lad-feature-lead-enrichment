name: Sync to LAD Main Repositories

on:
  push:
    branches: [main]
  workflow_dispatch:

jobs:
  sync-backend:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout feature repo
        uses: actions/checkout@v3
        with:
          fetch-depth: 0

      - name: Checkout LAD-Backend
        uses: actions/checkout@v3
        with:
          repository: techiemaya-admin/LAD-Backend
          token: ${{ secrets.LAD_REPO_TOKEN }}
          path: lad-backend
          ref: develop

      - name: Copy backend files
        run: |
          # Remove old files
          rm -rf lad-backend/features/lead-enrichment/*

          # Ensure directories exist
          mkdir -p lad-backend/features/lead-enrichment/services
          mkdir -p lad-backend/features/lead-enrichment/routes
          mkdir -p lad-backend/features/lead-enrichment/controllers
          mkdir -p lad-backend/features/lead-enrichment/middleware
          mkdir -p lad-backend/features/lead-enrichment/models

          # Copy new files
          [ -d "backend/services" ] && cp backend/services/* lad-backend/features/lead-enrichment/services/ || echo "No services directory"
          [ -f "backend/routes/index.js" ] && cp backend/routes/index.js lad-backend/features/lead-enrichment/routes/index.js || echo "No routes/index.js"
          [ -d "backend/controllers" ] && cp backend/controllers/* lad-backend/features/lead-enrichment/controllers/ 2>/dev/null || echo "No controllers directory"
          [ -d "backend/middleware" ] && cp backend/middleware/* lad-backend/features/lead-enrichment/middleware/ 2>/dev/null || echo "No middleware directory"
          [ -d "backend/models" ] && cp backend/models/* lad-backend/features/lead-enrichment/models/ 2>/dev/null || echo "No models directory"
          [ -f "backend/manifest.js" ] && cp backend/manifest.js lad-backend/features/lead-enrichment/ || echo "No manifest.js"
          [ -f "backend/UPGRADE_NOTES.md" ] && cp backend/UPGRADE_NOTES.md lad-backend/features/lead-enrichment/ || echo "No UPGRADE_NOTES.md"
          [ -f "backend/README.md" ] && cp backend/README.md lad-backend/features/lead-enrichment/ || echo "No README.md"

      - name: Commit and push to LAD-Backend
        working-directory: lad-backend
        run: |
          git config user.name "GitHub Actions"
          git config user.email "actions@github.com"
          git add features/lead-enrichment/
          git commit -m "feat(lead-enrichment): auto-sync from feature repo

          Synced from: ${{ github.sha }}
          Repository: lad-feature-lead-enrichment
          Timestamp: $(date -u)
          " || echo "No changes to commit"
          git push origin develop

  sync-frontend:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout feature repo
        uses: actions/checkout@v3

      - name: Checkout LAD-Frontend
        uses: actions/checkout@v3
        with:
          repository: techiemaya-admin/LAD-Frontend
          token: ${{ secrets.LAD_REPO_TOKEN }}
          path: lad-frontend
          ref: develop

      - name: Copy frontend SDK files
        run: |
          # Remove old SDK
          rm -rf lad-frontend/sdk/features/lead-enrichment/*

          # Ensure directory exists
          mkdir -p lad-frontend/sdk/features/lead-enrichment

          # Copy new SDK
          [ -d "frontend/sdk" ] && cp -r frontend/sdk/* lad-frontend/sdk/features/lead-enrichment/ || echo "No frontend SDK"

          # Copy components if exist
          if [ -d "frontend/components" ] && [ "$(ls -A frontend/components)" ]; then
            mkdir -p lad-frontend/web/src/features/lead-enrichment
            rm -rf lad-frontend/web/src/features/lead-enrichment/*
            cp -r frontend/components/* lad-frontend/web/src/features/lead-enrichment/
          fi

      - name: Commit and push to LAD-Frontend
        working-directory: lad-frontend
        run: |
          git config user.name "GitHub Actions"
          git config user.email "actions@github.com"
          git add sdk/features/lead-enrichment/
          if [ -d "web/src/features/lead-enrichment" ]; then
            git add web/src/features/lead-enrichment/
          fi
          git commit -m "feat(lead-enrichment): auto-sync SDK from feature repo

          Synced from: ${{ github.sha }}
          Repository: lad-feature-lead-enrichment
          Timestamp: $(date -u)
          " || echo "No changes to commit"
          git push origin develop
